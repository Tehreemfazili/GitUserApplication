<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/dimen_16"
    app:cardCornerRadius="@dimen/dimen_4"
    android:padding="@dimen/dimen_8"
    android:layout_marginBottom="@dimen/dimen_4">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_8">

        <TextView
            android:id="@+id/id_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id :"
            android:textColor="@color/blue"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="@dimen/dimen_4"
           app:layout_constraintEnd_toStartOf="@id/id" />

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="@dimen/dimen_4"
           app:layout_constraintStart_toEndOf="@id/id_title" />


        <TextView
            android:id="@+id/repo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/repo_name"
            android:textColor="@color/blue"
            app:layout_constraintTop_toBottomOf="@id/id"
            android:padding="@dimen/dimen_4"
            app:layout_constraintEnd_toStartOf="@id/name"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/id"
            android:padding="@dimen/dimen_4"
            app:layout_constraintStart_toEndOf="@id/repo_name"/>

        <TextView
            android:id="@+id/url_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/url_title"
            android:textColor="@color/blue"
            app:layout_constraintTop_toBottomOf="@id/name"
            android:padding="@dimen/dimen_4"
            app:layout_constraintEnd_toStartOf="@id/url"/>

        <TextView
            android:id="@+id/url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/name"
            android:padding="@dimen/dimen_4"
            app:layout_constraintStart_toEndOf="@id/url_title"/>

        <View
            android:id="@+id/view"
            android:layout_width="30dp"
            android:layout_height="1dp"
            android:background="@color/blue"
            app:layout_constraintTop_toBottomOf="@id/url"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/img_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_right"
            android:padding="@dimen/dimen_8"
            app:layout_constraintTop_toBottomOf="@id/id"
            app:layout_constraintBottom_toTopOf="@id/url"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>